<Window x:Class="ProcessesWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ProcessesWpf" Height="450" Width="800">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="150"/>
      <RowDefinition />
    </Grid.RowDefinitions>
    <TextBox Grid.Row="0" Name="QueryEntry" AcceptsReturn="True" FontFamily="Consolas" FontSize="16"/>
    <DockPanel Grid.Row="1">
      <Button DockPanel.Dock="Bottom" Click="OnRunButtonClicked" Content="Run" Width="100" HorizontalAlignment="Right" />
      <DataGrid DockPanel.Dock="Top" Name="ResultDataGrid" />

    </DockPanel>

  </Grid>

</Window>
